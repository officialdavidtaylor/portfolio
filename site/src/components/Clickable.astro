---
/** Clickable is */

interface ClickableProps {
  href?: string;
}
const { href } = Astro.props as ClickableProps;

const Element = href ? "a" : "button";
---

<Element
  {href}
  class="rounded border border-transparent bg-gray-100 px-4 py-1 font-serif font-semibold text-gray-900 transition-colors duration-300 ease-in-out hover:border-gray-800 hover:bg-gray-200"
>
  <slot />
</Element>
